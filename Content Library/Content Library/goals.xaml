<Page x:Class="Content_Library.Goals"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Content_Library"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Goals">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="christ church.jpg"/>
        </Grid.Background>
        <Button Content="new goal" HorizontalAlignment="Left" Height="55" Margin="565,435,0,0" VerticalAlignment="Top" Width="235" Click="goal_add" Background="#FFE8CC1F" FontSize="24"/>
        <TextBlock x:Name="TBCountDown" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="555,71,0,0" Height="69" Width="222"/>
        <ListBox HorizontalAlignment="Left" Height="100" Margin="0,400,0,0" VerticalAlignment="Top" Width="100"/>
        <ListBox x:Name="listbox1" HorizontalAlignment="Left" Height="85" VerticalAlignment="Top" Width="180" Background="#FF012247"  Margin="295,405,0,0" BorderBrush="#FF012247" Loaded="loadedp0age" Opacity="0"/>
        <Label x:Name="clocklabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="588,10,0,0" Height="31" Width="180" AutomationProperties.IsRowHeader="True" Background="#FFE8CC1F" FontSize="18" BorderBrush="Black" Foreground="Black"/>
        <StackPanel x:Name="listbox12" HorizontalAlignment="Left" Height="366" VerticalAlignment="Top" Width="780" Background="#FF4D68E0" Margin="10,62,0,0" Opacity="0.75"/>
        <Label Content="Home" HorizontalAlignment="Left" Height="57" VerticalAlignment="Top" Width="129" FontSize="40" Margin="10,0,0,0" Background="#FFE8CC1F"/>

    </Grid>
</Page>
