<Page x:Class="Content_Library.Goals"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Content_Library"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Goals">

    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="christ church.jpg"/>
        </Grid.Background>
        <Button Content="new goal" HorizontalAlignment="Left" Height="55" Margin="555,435,0,0" VerticalAlignment="Top" Width="235" Click="goal_add" Background="#FFE8CC1F"/>
        <TextBlock x:Name="TBCountDown" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Margin="555,71,0,0" Height="69" Width="222"/>
        <ListBox HorizontalAlignment="Left" Height="100" Margin="520,300,0,0" VerticalAlignment="Top" Width="100"/>
        <Label x:Name="clocklabel" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="588,10,0,0" Height="31" Width="180" AutomationProperties.IsRowHeader="True" Background="#FFE8CC1F" FontSize="18"/>
        <Label Content="home" HorizontalAlignment="Left" Height="52" VerticalAlignment="Top" Width="325" FontSize="30" Background="#FFE8CC1F" Foreground="Black"/>
        <StackPanel HorizontalAlignment="Left" Height="100" Margin="933,300,-233,0" VerticalAlignment="Top" Width="100"/>

    </Grid>
</Page>
