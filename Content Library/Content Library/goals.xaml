<Page x:Class="Content_Library.Goals"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Content_Library"
      mc:Ignorable="d" 
      d:DesignHeight="500" d:DesignWidth="800"
      Title="Goals">

    <Grid>
        <Button Content="new goal" HorizontalAlignment="Left" Height="55" Margin="555,435,0,0" VerticalAlignment="Top" Width="235" Click="goal_add"/>
        <TabControl x:Name="maintabcontroal" HorizontalAlignment="Left" Height="430" VerticalAlignment="Top" Width="790" SelectionChanged="maintabcontroal_SelectionChanged">
            <TabItem Header="TabItem" Content="">
                <TabItem.DataContext>
                    <local:Page3/>
                </TabItem.DataContext>
            </TabItem>

        </TabControl>
        <Label x:Name="clocklabel" Content="Label" HorizontalAlignment="Left" Margin="10,29,0,0" VerticalAlignment="Top" Width="372" Height="92"/>
        <TextBlock x:Name="TBCountDown" HorizontalAlignment="Left" Height="127" Margin="99,108,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Width="358"/>

    </Grid>
</Page>
